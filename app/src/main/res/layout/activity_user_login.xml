<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground2"
    tools:context=".userLogin">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewH"
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:srcCompat="@drawable/ther" />

        <TextView
            android:id="@+id/textViewH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/amita"
            android:text="Therapist Near You"
            android:textAllCaps="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewSignU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="45dp"
        android:textStyle="bold"
        android:textColor="@color/myNormalBlue"
        android:fontFamily="@font/belgrano"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="25dp"
        android:gravity="center_horizontal" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/inputEmailLoginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_email"
            android:background="@color/whiteSmokeBackground"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="15dp"
            android:hint="Enter email"
            android:inputType="textEmailAddress" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp">

        <EditText
            android:id="@+id/inputPassLoginUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_vpn_key"
            android:background="@color/whiteSmokeBackground"
            android:drawablePadding="10dp"
            android:ems="10"
            android:padding="15dp"
            android:hint="Enter password"
            android:inputType="textPassword" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnLoginUser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        app:backgroundTint="@color/myBlueGreen"
        app:cornerRadius="14dp"
        app:elevation="20dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:text="Don't have an account?" />

        <TextView
            android:id="@+id/userRegFormLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/myNormalBlue"
            android:text="Register" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Register with us as a:"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="110dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/therRegWithUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/whiteSmokeBackground"
        android:fontFamily="@font/montserrat"
        android:text="Therapist"
        android:elevation="15dp"
        android:textColor="@color/myNormalBlue"
        app:cornerRadius="10dp"
        app:strokeColor="@color/myNormalBlue"
        app:strokeWidth="1dp" />

</LinearLayout>